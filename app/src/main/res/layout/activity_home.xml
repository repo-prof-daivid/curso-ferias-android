<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".ui.home.HomeActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:hint="Nome do jogo"
        android:textColor="@android:color/white"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/genero"
        app:layout_constraintEnd_toEndOf="@+id/genero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/genero"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:hint="Genero"
        android:textColor="@android:color/white"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/tempoDeDuração"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tempoDeDuração"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:hint="Tempo de duração"
        android:textColor="@android:color/white"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/nota"
        app:layout_constraintEnd_toEndOf="@+id/genero"
        app:layout_constraintStart_toStartOf="@+id/nome"
        app:layout_constraintTop_toBottomOf="@+id/genero" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/nota"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        android:hint="nota"
        android:textColor="@android:color/white"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintStart_toStartOf="@+id/tempoDeDuração"
        app:layout_constraintTop_toBottomOf="@+id/tempoDeDuração" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Novo jogo"
        android:textColor="@color/black"
        android:backgroundTint="@color/dark_orange"
        app:layout_constraintBottom_toTopOf="@+id/listaJogos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nota" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaJogos"
        android:layout_width="347dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        tools:listitem="@layout/games_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
